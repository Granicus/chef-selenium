check process selenium with pidfile /var/run/selenium.pid
  start program "/bin/bash -c 'PID_FILE=/var/run/selenium.pid /etc/init.d/selenium start'" with timeout 60 seconds
  stop program  = "/bin/bash -c 'PID_FILE=/var/run/selenium.pid /etc/init.d/selenium stop'"
  group selenium
